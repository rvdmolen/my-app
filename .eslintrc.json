{
    "extends": [
        "eslint:recommended",
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true
    },
    "plugins": [
        "html"
    ],
    "rules": {
        "brace-style": "off",
        "new-cap": [
            "error",
            {
                "capIsNewExceptions": [
                    "Polymer"
                ]
            }
        ],
        "no-var": "off",
        "no-console": "off",
        "no-undef": "off",
        "require-jsdoc": "off",
        "linebreak-style": 0,
        "comma-dangle": "off",
        "max-len" : "off",
        "no-trailing-spaces" : "off",
        "no-multiple-empty-lines" : "off"
    },
    "globals": {
        "Polymer": true
    }
}
